<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:gravity="center_vertical"
        android:paddingTop="3dp" >

        <ImageView
            android:id="@+id/ivFileType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:contentDescription="@string/no_content"
            android:src="@drawable/icon_other_file" />

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvFileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="13dp"
            android:text="@string/no_content"
            android:textColor="@color/message_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:paddingBottom="5dp"
        android:paddingTop="7dp" >

        <Button
            android:id="@+id/btPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_play"
            android:focusable="false" />

        <Button
            android:id="@+id/btSpeak_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_speaker_on"
            android:focusable="false"
            android:text="@string/speaker_on"
            android:textColor="@color/message" />
    </LinearLayout>

</LinearLayout>