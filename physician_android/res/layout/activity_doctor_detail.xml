<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar" >

        <Button
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:background="@drawable/button_back_selector"
            android:text="@string/back"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btIsFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:background="@drawable/is_not_favourite"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="9dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_top" >
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_center"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                    
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:layout_marginRight="14dp"	                
	                    android:orientation="vertical" >
	
	                    <TextView
	                        android:id="@+id/tvName"
	                        android:layout_width="100dp"
	                        android:layout_height="wrap_content"
	                        android:text="@string/no_content"
	                        android:textColor="@color/black"
	                        android:textSize="15sp"
	                        android:textStyle="bold" />
	
	                    <TextView
	                        android:id="@+id/tvSpecialty"
	                        android:layout_width="100dp"
	                        android:layout_height="wrap_content"
	                        android:layout_marginBottom="5dp"
	                        android:layout_marginTop="5dp"
	                        android:text="@string/no_content" />
	
	                    <ImageView
	                        android:id="@+id/ivAvatar"
	                        android:layout_width="100dp"
	                        android:layout_height="130dp"
	                        android:layout_margin="3dp"
	                        android:contentDescription="@string/no_content"
	                        android:src="@drawable/avatar_male_small" />
	                </LinearLayout>
	                
	                <LinearLayout
	                    android:id="@+id/llOrgLogoContainer"
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:orientation="vertical" >
	                    
	                    <ImageView
	                        android:layout_width="50dp"
	                        android:layout_height="35dp"
	                        android:layout_margin="3dp"
	                        android:contentDescription="@string/no_content"
	                        android:visibility="visible" />
	                    
	                     <ImageView
	                        android:layout_width="50dp"
	                        android:layout_height="35dp"
	                        android:layout_margin="3dp"
	                        android:contentDescription="@string/no_content"
	                        android:visibility="visible" />
	                     
	                      <ImageView
	                        android:layout_width="50dp"
	                        android:layout_height="35dp"
	                        android:layout_margin="3dp"
	                        android:contentDescription="@string/no_content"
	                        android:visibility="visible" />
	                      
	                       <ImageView
	                        android:layout_width="50dp"
	                        android:layout_height="35dp"
	                        android:layout_margin="3dp"
	                        android:contentDescription="@string/no_content"
	                        android:visibility="visible" />
	                
	                    
	                </LinearLayout>
	                
				</LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="9dp"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_msg"
                        android:text="@string/msg"
                        android:textColor="@color/message"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_call"
                        android:text="@string/call"
                        android:textColor="@color/message"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/button_page"
                        android:text="@string/page"
                        android:textColor="@color/message"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@drawable/box_bottom" >
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_top" >
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:text="@string/special_skills"
                    android:textColor="@color/message_time" />

                <TextView
                    android:id="@+id/tvSpecialSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@drawable/box_bottom" >
            </FrameLayout>
            
            <LinearLayout
                android:id="@+id/llcurrentPracticeOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

	            <FrameLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/box_top" >
	            </FrameLayout>
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/box_center"
	                android:baselineAligned="false"
	                android:orientation="horizontal" >
	
	                <LinearLayout
	                    android:layout_width="0dip"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:orientation="vertical" >
	
	                    <TextView
	                        android:id="@+id/tvCurrentOrgTitle"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginBottom="9dp"
	                        android:layout_marginLeft="9dp"
	                        android:layout_marginRight="9dp"
	                        android:text="@string/practice_location"
	                        android:textColor="@color/message_time" />
	
	                    <TextView
	                        android:id="@+id/tvPracticeLocation"
	                        android:layout_width="match_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_marginBottom="5dp"
	                        android:layout_marginLeft="9dp"
	                        android:layout_marginRight="9dp"                        
	                        android:textColor="@color/black" />
	
	                </LinearLayout>
	
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:layout_marginRight="9dp"
	                    android:orientation="vertical" >
	
	                    <Button
	                        android:id="@+id/btPracticeMessage"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:background="@drawable/button_msg_disable"
	                        android:text="@string/msg"
	                        android:textColor="@color/message"
	                        android:textSize="13sp"
	                        android:textStyle="bold" />
	
	                    <Button
	                        android:id="@+id/btPracticeCall"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="5dp"
	                        android:background="@drawable/button_call_disable"
	                        android:text="@string/call_office"
	                        android:textColor="@color/message"
	                        android:textSize="12sp"
	                        android:textStyle="bold" />
	                </LinearLayout>
	            </LinearLayout>
	
	            <FrameLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="7dp"
	                android:background="@drawable/box_bottom" >
	            </FrameLayout>
	        </LinearLayout>

            <FrameLayout
                android:id="@+id/framelayout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_top" >

            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearlayout_org_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:text="@string/other_orgs"
                    android:textColor="@color/message_time" />

                <TextView
                    android:id="@+id/textview_other_orgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/framelayout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@drawable/box_bottom" >

            </FrameLayout>
            </LinearLayout>
    </ScrollView>

	<FrameLayout
	    android:id="@+id/frameLoading"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/common_bg" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>